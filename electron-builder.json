{
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "msi",
      "portable"
    ]
  },
  "msi": {
    "artifactName": "${productName}-${version}-setup.${ext}",
    "createDesktopShortcut": "always"
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ],
    "category": "Network"
  }
}
